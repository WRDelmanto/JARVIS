.docs
    width 100%
    height 100vh
    display flex
    flex-direction column

    .header
        width 100%

        .title, .subtitle
            font-family Roboto
            max-width title-width
            margin 0 auto

        .title
            padding 20px 0 10px 10px
            letter-spacing 0.7px
            font-size 40px
            font-weight 500

        .subtitle
            padding 0 0 20px 10px
            font-weight 400
            font-size 20px

    .body
        background-color #f5f5f5
        border-top 1px solid #3380e5
        width 100%
        flex 1